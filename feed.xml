---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title | xml_escape }}</title>
  <link href="{{ site.url }}/feed.xml" rel="self"/>
  <link href="{{ site.url }}/"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}/</id>
  <author>
    <name>{{ site.title | xml_escape }}</name>
  </author>

  {% assign all_items = site.posts | concat: site.content | sort: 'date' | reverse %}
  {% assign public_items = all_items | where_exp: "item", "item.visibility == 'public' or item.visibility == nil or item.visibility == ''" %}

  {% for item in public_items limit: 20 %}
    <entry>
      <title>{{ item.title | xml_escape }}</title>
      <link href="{{ site.url }}{{ item.url }}"/>
      <updated>{{ item.date | date_to_xmlschema }}</updated>
      <id>{{ site.url }}{{ item.id }}</id>
      <content type="html">
        {{ item.content | xml_escape }}
      </content>
    </entry>
  {% endfor %}
</feed>
